- if options.any?
  - options_for_js = options.merge(responsive: responsive).collect { |k,v| "\"#{k.to_s.camelize(:lower)}\": #{v}" }.join(', ')
  %div.slick-slide-content{ style: 'display: none;', data: { slick: "{#{options_for_js.html_safe}}" } }
    = block.call
- else
  %div.slick-slide-content{ style: 'display: none;', data: { slick: true } }
    = block.call